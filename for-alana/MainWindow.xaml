<Window x:Class="NetworkScanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Network Scanner - Professional Edition" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#1565C0" 
                Padding="20,15" 
                CornerRadius="5"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Network Scanner" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock Text="Professional Network Discovery and Port Scanning Tool" 
                          FontSize="14" 
                          Foreground="#E3F2FD"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Scan Configuration -->
        <Border Grid.Row="1" 
                Background="White" 
                Padding="20" 
                CornerRadius="5"
                Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Target Input -->
                <TextBlock Grid.Row="0" Grid.Column="0" 
                          Text="Target Host/IP:" 
                          VerticalAlignment="Center"
                          FontWeight="SemiBold"
                          Margin="0,0,15,0"/>
                <TextBox Grid.Row="0" Grid.Column="1" 
                        x:Name="TargetTextBox"
                        Text="127.0.0.1"
                        ToolTip="Enter IP address, hostname, or IP range (e.g., 192.168.1.1-254)"/>

                <!-- Scan Type -->
                <TextBlock Grid.Row="0" Grid.Column="2" 
                          Text="Scan Type:" 
                          VerticalAlignment="Center"
                          FontWeight="SemiBold"
                          Margin="15,0,15,0"/>
                <ComboBox Grid.Row="0" Grid.Column="3" 
                         x:Name="ScanTypeComboBox"
                         SelectedIndex="0">
                    <ComboBoxItem Content="Quick Scan (Common Ports)"/>
                    <ComboBoxItem Content="Full Scan (All Ports)"/>
                    <ComboBoxItem Content="Custom Port Range"/>
                    <ComboBoxItem Content="Ping Sweep Only"/>
                </ComboBox>

                <!-- Port Range -->
                <TextBlock Grid.Row="1" Grid.Column="0" 
                          Text="Port Range:" 
                          VerticalAlignment="Center"
                          FontWeight="SemiBold"
                          Margin="0,10,15,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                        x:Name="PortRangeTextBox"
                        Text="1-1024"
                        Margin="0,10,0,0"
                        ToolTip="Enter port range (e.g., 1-1024, 80,443,8080)"/>

                <!-- Timeout -->
                <TextBlock Grid.Row="1" Grid.Column="2" 
                          Text="Timeout (ms):" 
                          VerticalAlignment="Center"
                          FontWeight="SemiBold"
                          Margin="15,10,15,0"/>
                <TextBox Grid.Row="1" Grid.Column="3" 
                        x:Name="TimeoutTextBox"
                        Text="1000"
                        Margin="0,10,0,0"
                        ToolTip="Connection timeout in milliseconds"/>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0">
                    <Button Content="Start Scan" 
                           x:Name="StartButton"
                           Width="150"
                           Click="StartButton_Click"/>
                    <Button Content="Stop Scan" 
                           x:Name="StopButton"
                           Width="150"
                           IsEnabled="False"
                           Click="StopButton_Click"
                           Background="#F44336"/>
                    <Button Content="Export Results" 
                           x:Name="ExportButton"
                           Width="150"
                           Click="ExportButton_Click"
                           Background="#4CAF50"/>
                    <Button Content="Clear" 
                           x:Name="ClearButton"
                           Width="150"
                           Click="ClearButton_Click"
                           Background="#FF9800"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Progress Bar -->
        <Border Grid.Row="2" 
                Background="White" 
                Padding="15" 
                CornerRadius="5"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock x:Name="StatusTextBlock" 
                          Text="Ready to scan" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,8"/>
                <ProgressBar x:Name="ScanProgressBar" 
                            Height="25" 
                            Minimum="0" 
                            Maximum="100"/>
            </StackPanel>
        </Border>

        <!-- Results -->
        <Border Grid.Row="3" 
                Background="White" 
                Padding="15" 
                CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                          Text="Scan Results" 
                          FontSize="18" 
                          FontWeight="Bold"
                          Margin="0,0,0,10"/>

                <DataGrid Grid.Row="1" 
                         x:Name="ResultsDataGrid"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         AlternatingRowBackground="#F9F9F9"
                         GridLinesVisibility="Horizontal"
                         HeadersVisibility="Column"
                         CanUserResizeColumns="True"
                         CanUserSortColumns="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Host" Binding="{Binding Host}" Width="150"/>
                        <DataGridTextColumn Header="Port" Binding="{Binding Port}" Width="80"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                        <DataGridTextColumn Header="Service" Binding="{Binding Service}" Width="120"/>
                        <DataGridTextColumn Header="Response Time (ms)" Binding="{Binding ResponseTime}" Width="150"/>
                        <DataGridTextColumn Header="Details" Binding="{Binding Details}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="4" 
                Background="#263238" 
                Padding="15,10" 
                CornerRadius="5"
                Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="FooterStatusTextBlock" 
                          Grid.Column="0"
                          Text="Total Hosts: 0 | Open Ports: 0 | Closed Ports: 0" 
                          Foreground="White"
                          VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" 
                          Text="v1.0.0" 
                          Foreground="#90A4AE"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
